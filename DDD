    <audio id="click-sound" src="https://www.soundjay.com/button/sounds/button-16.mp3"></audio>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        const flashcards = [
            { topic: "CRIE OS MEUS TOP LEADS DIVIDIDO POR EMAIL MKT INSTAGRAM TIKTOK LINKEDIN", action: "Ação: Realize análises de palavras-chave para otimizar o conteúdo digital.", audience: "big-data" },
            { topic: "ANALISE DE SENTIMENTO", action: "Ação: Monitore e analise o sentimento dos clientes em tempo real.", audience: "big-data" },
            { topic: "ME AJUDE A PROGRAMAR O MEU SALESFORCE", action: "Ação: Envie campanhas de email personalizadas com base em análises de dados.", audience: "big-data" },
            { topic: "Análise de Tendências de Mercado", action: "Ação: Utilize IA para identificar e prever tendências de mercado emergentes.", audience: "big-data" },
            { topic: "OTIMIZAÇÃO DE CONVERSÃO", action: "Ação: Analise os dados de navegação dos usuários e sugira melhorias na interface do site.", audience: "big-data" },
            { topic: "PREVISÃO DE DESEMPENHO DE PRODUTOS", action: "Ação: Analise os dados de vendas e comportamento do cliente para prever o desempenho futuro dos produtos.", audience: "big-data" },
            { topic: "DESENVOLVA CAMPANHAS DE EMAIL MARKETING PERSONALIZADAS", action: "Ação: Desenvolva campanhas de email marketing personalizadas a partir dos resultados de suas campanhas.", audience: "creative" },
            { topic: "ATENDIMENTO TREINADO 24/7 INTELIGENTE", action: "Ação: Gere descrições de produtos atraentes e otimizadas para SEO.", audience: "creative" },
            { topic: "DESCREVER PRODUTOS", action: "Ação: Gere descrições de produtos atraentes e otimizadas para SEO.", audience: "creative" },
            { topic: "ANÁLISE DE CAMPANHAS PUBLICITÁRIAS", action: "Ação: Avalie o desempenho de campanhas publicitárias em diversas plataformas.", audience: "creative" },
            { topic: "RECOMENDAR E-COMMERCE", action: "Ação: Avalie o desempenho de campanhas publicitárias em diversas plataformas.", audience: "creative" },
            { topic: "CRIAR PERSONAS COM SEUS DADOS", action: "Ação: Desenvolva personas detalhadas a partir de dados reais para campanhas mais eficazes.", audience: "creative" },
        ];

        const bigDataColumn = document.getElementById('big-data-column');
        const creativeColumn = document.getElementById('creative-column');
        const clickSound = document.getElementById('click-sound');

        flashcards.forEach(({ topic, action, audience }) => {
            const flashcard = document.createElement('div');
            flashcard.classList.add('flashcard', audience);

            const front = document.createElement('div');
            front.classList.add('front');
            front.innerHTML = `<div><i class="fas fa-play-circle"></i> ${topic}</div>`;

            const back = document.createElement('div');
            back.classList.add('back');
            back.innerHTML = `<div><i class="fas fa-info-circle"></i> ${action}</div>`;

            flashcard.appendChild(front);
            flashcard.appendChild(back);

            flashcard.addEventListener('click', () => {
                flashcard.classList.toggle('is-flipped');
                clickSound.currentTime = 0;
                clickSound.play();
            });

            if (audience === 'big-data') {
                bigDataColumn.appendChild(flashcard);
            } else if (audience === 'creative') {
                creativeColumn.appendChild(flashcard);
            }
        });
    </script>
